.main-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f6f6f6;
  box-sizing: border-box;
}

header{
  height:40px;
  width:100%;
  background:#ffcc22;
}

header ul{
  width:100%;
  height:40px;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

header ul .head-l{
  width:90%;
  height:20px;
  text-align: center;
}
header ul .head-l span{
  display: block;
  width:50%;
  height:20px;
  margin-left:30%;
}
header ul .head-r{
  width:10%;
  height:20px;
  text-align: left;
}
header ul .head-r image{
  width:24px;
  height:20px;
}

.sale-main{
  width:100%;
  height:30px;
}
.sale-main ul{
  width:80%;
  height:30px;
  padding: 0 10%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.sale-main ul li{
  width:30%;
  height:30px;
  margin:0 2px;
  line-height: 30px;
}

.sale-main ul li image{
  width:15px;
  height: 15px;
  float: left;
  margin-top:7px;
}
.sale-main ul li span{
  width:80%;
  height: 100%;
  float: right;
  font-size: 12px;
  color:#979797;
}

.sale-list{
  width:100%;
  height:100%;
}
.sale-list scroll-view {
  height: 100%;
}
.sale-list scroll-view button {
  font-size: 12px;
  border: 0;
}
.sale-list scroll-view button{
  font-size: 12px;
  border: 0;
}


.sale-c{
  width:100%;
  height:200px;
  margin:0 2% 5%;
}
.sale-c image{
  width:95%;
  height:170px;
}
.sale-c b{
  width:95%;
  height:29px;
  display: flex;
  justify-content: space-between;
  line-height: 34px;
  background: #fff;
}
.sale-c b span{
  display: block;
  height:20px;
  font-size: 14px;
  margin-top:10px;
  line-height: 20px;
  padding-left: 5px;
  color:rgb(131,131,131);
}
.sale-c b i{
  display: block;
  font-size: 12px;
  color:rgb(169,169,169);
}
